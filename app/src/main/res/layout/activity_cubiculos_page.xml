<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:padding="16dp"
        android:rowCount="3">

        <!-- Cubículo #1 -->
        <LinearLayout
            android:id="@+id/Cubi_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/box"
            android:orientation="vertical"
            android:padding="16dp">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/circle_green" /> <!-- Usa el drawable circular que acabas de definir -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cubículo #1"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/cubicle_image" /> <!-- Reemplaza 'cubicle_image' con tu imagen de cubículo -->

            <Button
                android:id="@+id/btn_detalles1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalles >>" />
        </LinearLayout>

